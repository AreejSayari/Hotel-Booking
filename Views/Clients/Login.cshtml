@model tuto.Models.Client

@{
    ViewData["Title"] = "Login";
}


<h4>Client</h4>
<hr />
<form method="post" action="/Clients/Login">
    
    <div>
        <label>Email:</label>
        <input type="email" name="email" />
    </div>
    <div>
    <label>Password:</label>
    <input type="password" name="password" />
    </div>
    <div>
        <button type="submit">Envoyer</button>
    </div>
</form>

