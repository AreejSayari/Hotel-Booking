@model tuto.Models.Reservation


@{
    ViewData["Title"] = "Reserver";
}

<h1>Reserver Chambre</h1>

<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        @Html.ValidationSummary(true)
        
        
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.DateArrivee, new { @class = "control-label" })
            <div class="input-group">
                @Html.EditorFor(model => model.DateArrivee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateArrivee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.DateDepart, new { @class = "control-label" })
            <div class="input-group">
                @Html.EditorFor(model => model.DateDepart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateDepart, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <br>
        <div class="form-group col-md-12">
            <input type="submit" value="Reserver" class="btn btn-primary" />
        </div>
    </div>
}

<br />
<br />

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<div>
    <a asp-controller="Chambres" asp-action="MesChambres">Revenir aux Chambres</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
